<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title> !!!! Dashboard !!!! </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <div class="position-relative mt-3 mb-5">
            <h1 class="text-center text-uppercase">LISTE DES BIENS</h1>
            <div class="position-absolute top-0 end-0 mt-2">
                <a href="/logout" class="btn btn-outline-dark">
                    ME DECONNECTER
                </a>
            </div>
        </div>
    
        <div class="text-end mb-2 mt-5">
            <a class="btn btn-success" href="/good/new">NOUVEAU</a>
        </div>
    
        <table class="table mb-4">
            <thead class="table-dark">
            <tr>
                <th scope="col">Label</th>
                <th scope="col">PrixHT</th>
                <th scope="col">Quantity</th>
                <!-- <th scope="col">Type</th>
                <th scope="col">Département</th> -->
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% for(const good of goods) { %>
                <tr>
                    <td><%= good.label %></td>
                    <td><%= good.priceHT%> €</td>
                    <td><%= good.quantity %></td>
                    <td>
                        <a class="btn btn-warning" href="/good/<%= good.id %>/edit">MODIFIER</a>
                        <a class="btn btn-danger" href="/good/<%= good.id %>/delete">SUPPRIMER</a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    
    </div>
    


</body>
</html>
