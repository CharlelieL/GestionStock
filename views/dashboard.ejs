                    <td>
                        <a class="btn btn-warning" href="">MODIFIER</a>
                        <button data-id="<%= task.id %>" class="btn btn-danger">SUPPRIMER</button>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    
    </div>
    

</body>
</html>
